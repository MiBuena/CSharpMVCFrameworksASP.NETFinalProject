@model LeisureTimeSystem.Models.ViewModels.Organization.AllOrganizationCoursesViewModel

@{
    ViewBag.Title = "ManageOrganizationCourses";
}

<h2>Manage Organization Courses</h2>

@Html.ActionLink("Add course", "Add", "Course", new {organizationId = this.Model.OrganizationId}, null)

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().SubscriptionDeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().OrganizationName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Courses)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionDeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Course", new {courseId = item.Id}, null)
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", "Course", new {courseId = item.Id}, null)
            </td>


            <td>
                @Html.ActionLink("Manage applications", "ManageCourseApplications", "Course", new { courseId = item.Id }, null)
            </td>


        </tr>
    }

</table>
