@model LeisureTimeSystem.Models.ViewModels.Organization.DeletePictureViewModel

@{
    ViewBag.Title = "DeletePicture";
}

<h2>DeletePicture</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DeletePictureViewModel</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <img src=@this.Model.Path alt="Smiley face" class="picture">
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.OrganizationId)

        @Html.HiddenFor(model => model.PictureId)


        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
